{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "@profiler/profiler": [
        "libs/profiler/src"
      ],
      "@profiler/profiler/*": [
        "libs/profiler/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
